@model List<Say>

<section id="say">
    <div class="container">
        <div class="row py-5 justify-content-center">
            <div class="col-md-8 col-xl-6">
                <div class="owl-carousel say">
                    @foreach (var sayItem in @Model)
                    {
                        <div>
                            <div class="item text-center">
                                <div class="img d-flex justify-content-center">
                                    <img src="@sayItem.Photo" alt="">
                                </div>
                                <div class="text text-muted pt-3 pb-5">
                                    <i>
                                        @sayItem.Text
                                    </i>
                                </div>
                                <div class="author">
                                    <h6>@sayItem.Name</h6>
                                    <p class="text-black-50">@sayItem.Job</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>